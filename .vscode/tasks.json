{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "make build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": "$go"
    },
    {
      "label": "Test All",
      "type": "shell",
      "command": "make test",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": "$go"
    },
    {
      "label": "Test Current Package",
      "type": "shell",
      "command": "go test -v -race -count=1 ${fileDirname}",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": "$go"
    },
    {
      "label": "Coverage",
      "type": "shell",
      "command": "make coverage",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Coverage HTML",
      "type": "shell",
      "command": "make coverage-html",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Lint",
      "type": "shell",
      "command": "make lint",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": "$go"
    },
    {
      "label": "Format Code",
      "type": "shell",
      "command": "make fmt",
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "Vet",
      "type": "shell",
      "command": "make vet",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": "$go"
    },
    {
      "label": "Benchmarks",
      "type": "shell",
      "command": "make bench",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Clean",
      "type": "shell",
      "command": "make clean",
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "Install Dev Tools",
      "type": "shell",
      "command": "make tools",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Run Server (Debug)",
      "type": "shell",
      "command": "make run ARGS='--pipeline examples/pipeline.yaml --log-level debug'",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "API server starting"
        }
      }
    }
  ]
}
